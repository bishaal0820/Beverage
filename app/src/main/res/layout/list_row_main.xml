<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text" />

        <TextView
            android:id="@+id/name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view"
            android:text="Description" />

        <TextView
            android:id="@+id/style_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Style"
            android:layout_below="@id/name_view"/>

        <TextView
            android:id="@+id/volume_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:layout_below="@id/style_view"/>

        <TextView
            android:id="@+id/brewed_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brewed On"
            android:layout_below="@id/volume_view"/>

        <TextView
            android:id="@+id/best_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Before"
            android:layout_below="@id/brewed_view" />

        <ImageView
            android:id="@+id/image_taken"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>